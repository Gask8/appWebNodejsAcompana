<%- include('../partials/head')%>

<div class="container">
	<div class="jumbotron mt-5">
		<h2>Agregar Informacion de Liga</h2>
		<form method="POST" action="/doliente/addInfo/<%= data.id_doliente %>?_method=PUT">
			<div class="form-group">
				<label for="id">Id:</label>
				<input type="number" class="form-control" id="id" value="<%= data.id_doliente %>" disabled>
			</div>
			<div class="form-group">
				<label for="nombre">Nombre:</label>
				<input type="text" class="form-control" id="nombre" value="<%= data.primer_nombre %>" name="primer_nombre" disabled>
			</div>
			<div class="form-group">
				<label for="apellido">Apellido paterno:</label>
				<input type="text" class="form-control" id="apellido" value="<%= data.apellido_paterno %>" name="apellido_paterno" disabled>
			</div>
			<div class="form-group">
				<label for="ligaUrl">Liga URL:</label>
				<input type="text" class="form-control" id="ligaUrl" value="<%= data.liga_url %>" name="liga_url">
			</div>
			<div class="form-group">
				<label for="ligaId">Liga ID:</label>
				<input type="text" class="form-control" id="ligaId" value="<%= data.liga_id %>" name="liga_id">
			</div>
			<div class="form-group">
				<label for="ligaPassword">Liga Contrase√±a:</label>
				<input type="text" class="form-control" id="ligaPassword" value="<%= data.liga_password %>" name="liga_password">
			</div>
			<div class="form-group">
				<label for="preferenciaHorario">Preferencia de horario:</label>
				<input type="text" class="form-control" id="preferenciaHorario" value="<%= data.preferencia_de_horario %>" name="preferencia_de_horario" disabled>
			</div>
			<button type="submit" class="btn btn-primary btn-block">Enviar</button>
		</form>
	</div>
</div>

<%- include('../partials/footer')%>