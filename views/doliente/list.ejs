<%- include('../partials/head')%>
<script src="/scripts/script.js"></script>

<div class="container mt-5">
	<h1>Dolientes</h1>
	<br>
	<input class="form-control" id="myInput" type="text" placeholder="Buscar..">
	<br>
	<div class="container">
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>ID</th>
					<th>Nombre</th>
					<th>Edad</th>
					<th>Celular</th>
				</tr>
			</thead>
			<tbody id="myTable">
				<%for (let element of data) {%>
				<tr>
					<td><%= element.id_doliente %></td>
					<td><a href="/doliente/<%=element.id_doliente%>"><%= element.primer_nombre %> <%= element.apellido_paterno %></a></td>
					<td><%= element.edad %></td>
					<td><%= element.numero_celular %></td>
				</tr>
				<%}%>
			</tbody>
		</table>
		<a href="doliente/nuevo" class="btn btn-primary btn-block">Crear</a>
		<form class="mt-2" method="POST" action="/doliente?_method=DELETE" onsubmit="return confirm('En serio quieres borrar todo?');">
			<button class="btn btn-danger btn-block">Borrar Todo</button>
		</form>
	</div>
</div>

<%- include('../partials/footer')%>