<%- include('../partials/head')%>

<div class="container">
	<div class="jumbotron mt-5">
		<h2>Formulario de Horario</h2>
		<form method="POST" action="/horario">
			<!-- <div class="form-group">
				<label for="id">Id:</label>
				<input type="number" class="form-control" id="id" placeholder="Escribir ID" name="id">
			</div> -->
			<div class="form-group">
				<label for="idVoluntario">Id voluntario:</label>
				<select name="id_voluntario" id="idVoluntario" class="form-control">
					<option disabled selected value> -- Elije un Voluntario -- </option>
					<%for (let element of data) {%>
						<option value="<%=element.id_voluntario%>"><%= element.id_voluntario %></option>
					<%}%>
				</select>
			</div>
			<div class="form-group">
				<label for="horaComienzo">Hora Comienzo:</label>
				<input type="time" class="form-control" id="horaComienzo" name="hora_comienzo">
			</div>
			<div class="form-group">
				<label for="horaTermino">Hora término:</label>
				<input type="time" class="form-control" id="horaTermino" name="hora_termino">
			</div>
			<div class="form-group">
				<label for="diaSemana">Dia de la semana:</label>
				<select name="dia_semana" id="diaSemana" class="form-control">
					<option disabled selected value> -- Elije un Día -- </option>
					<option value="lunes"> Lunes </option>
					<option value="martes"> Martes </option>
					<option value="miercoles"> Miercoles </option>
					<option value="jueves"> Jueves </option>
					<option value="viernes"> Viernes </option>
					<option value="sabado"> Sabado </option>
					<option value="domingo"> Domingo </option>
				</select>
			</div>
			<button type="submit" class="btn btn-primary btn-block">Crear</button>
		</form>
	</div>
</div>

<%- include('../partials/footer')%>