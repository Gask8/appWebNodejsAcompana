<%- include('../partials/head')%>

<div class="container">
	<div class="jumbotron mt-5">
		<h2>Formulario de Celula</h2>
		<form method="POST" action="/voluntario">
			<div class="form-group">
				<label for="c_id">Id de Celula:</label>
				<select name="id_celula" id="c_id" class="form-control">
					<option disabled selected value> -- Elije un Grupo -- </option>
					<%for (let element of data) {%>
						<option value="<%=element.id_celula%>"><%= element.nombre_celula %></option>
					<%}%>
				</select>
			</div>
			<div class="form-group">
				<label for="nombre">Nombre:</label>
				<input type="text" class="form-control" id="nombre" placeholder="Escribir Nombres" name="nombre">
			</div>
			<div class="form-group">
				<label for="apellido">Apellido:</label>
				<input type="text" class="form-control" id="apellido" placeholder="Escribir Apellidos" name="apellido">
			</div>
			<div class="form-group">
				<label for="nacimiento">Fecha de Nacimiento:</label>
				<input type="date" class="form-control" id="nacimiento" name="fecha_nacimiento">
			</div>
			<div class="form-group">
				<label for="numero">Numero Telefonico:</label>
				<input type="tel" class="form-control" id="numero" name="numero_celular" placeholder="Numero Telefonico" required>
			</div>
			<div class="form-group">
				<label for="correo">Correo Electronico:</label>
				<input type="email" class="form-control" id="correo" placeholder="Escribir Correo" name="correo">
			</div>
			<div class="form-group">
				<label for="ciudad">Ciudad y Pais:</label>
				<input type="text" class="form-control" id="ciudad" placeholder="Escribir Ciudad y Pais" name="ciudad_pais">
			</div>
			<button type="submit" class="btn btn-primary btn-block">Crear</button>
		</form>
	</div>
</div>

<%- include('../partials/footer')%>