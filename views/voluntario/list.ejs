<%- include('../partials/head')%>
<script src="/scripts/script.js"></script>

<div class="container mt-5">
	<h1>Voluntario</h1>
	<br>
	<input class="form-control" id="myInput" type="text" placeholder="Buscar..">
	<br>
	<div class="container">
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>ID</th>
					<th>Celula</th>
					<th>Nombre</th>
					<th>Celular</th>
					<th>Horario</th>
				</tr>
			</thead>
			<tbody id="myTable">
				<%for (let element of data) {%>
				<tr>
					<td><%= element.id_voluntario %></td>
					<td><%= element.nombre_celula %></td>
					<td><a href="/voluntario/<%=element.id_voluntario%>"><%= element.nombre %> <%= element.apellido %></a></td>
					<td><%= element.numero_celular %></td>
					<td><a href="/horario/voluntarios/<%=element.id_voluntario%>" class="btn btn-info">Ver Horas</a></td>
				</tr>
				<%}%>
			</tbody>
		</table>
		<a href="/horario" class="btn btn-info btn-block">Ver Todos los Horarios</a>
		<a href="voluntario/nuevo" class="btn btn-primary btn-block">Crear</a>
		<form class="mt-2" method="POST" action="/voluntario?_method=DELETE" onsubmit="return confirm('En serio quieres borrar todo?');">
			<button class="btn btn-danger btn-block">Borrar Todo</button>
		</form>
	</div>
</div>

<%- include('../partials/footer')%>